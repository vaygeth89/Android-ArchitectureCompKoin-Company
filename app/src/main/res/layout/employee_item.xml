<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintCircleRadius="6dp"
    app:cardElevation="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="2dp"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/employee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-condensed"
            android:maxLines="2"
            android:text="@string/place_holder_medium_text"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/employee_name"
            android:textSize="@dimen/employee_name"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/employee_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:maxLines="3"
            android:text="@string/place_holder_medium_text"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/employee_name"
            android:textSize="@dimen/employee_age" />


    </LinearLayout>
</android.support.v7.widget.CardView>
